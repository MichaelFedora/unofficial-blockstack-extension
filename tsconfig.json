{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./stage",
    "baseUrl": "src",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "target": "es6",
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
